{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2016", "dom"],
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "typeRoots" : [
      "node_modules/@types",
      "node_modules/*",
      "src/types/*"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
